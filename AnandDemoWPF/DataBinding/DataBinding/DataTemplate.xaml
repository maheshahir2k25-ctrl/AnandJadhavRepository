<Window x:Class="DataBinding.DataTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="DataTemplate" Height="450" Width="800">
    <Grid Margin="10">
        <ListBox ItemsSource="{Binding Products}" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="16"/>
                                <TextBlock Text="{Binding Category}" 
                                           Foreground="Gray" 
                                           FontSize="12"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Price, StringFormat=₹ {0:N2}}" 
                                       VerticalAlignment="Center" 
                                       FontWeight="Bold" 
                                       Foreground="Green"/>
                        </Grid>
                    </Border>

                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</Window>
