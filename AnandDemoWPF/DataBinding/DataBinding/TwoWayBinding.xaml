<Window x:Class="DataBinding.TwoWayBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="TwoWayBinding" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">

            <TextBox Text="{Binding EchoText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                 Height="30" 
                 FontSize="14"/>
            <TextBox Text="{Binding EchoText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
     Height="30" 
     FontSize="14"/>

            <TextBlock Text="You are typing:" Margin="0,20,0,5" Foreground="Gray"/>

            <TextBlock Text="{Binding EchoText}" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="Blue"/>
            <Button Content="1" Click="Button_Click"/>
            <Button Content="2" Click="Button_Click"/>
            <Button Content="3" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Window>
