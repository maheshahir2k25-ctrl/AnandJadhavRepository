<UserControl x:Class="DependencyProperties.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DependencyProperties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="MyCard">
    <UserControl.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="30,0,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Margin="10" Background="White">
        <Border Background="Transparent" CornerRadius="20" BorderThickness="4" BorderBrush="Orange" Width="250" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,10">
            <TextBlock  HorizontalAlignment="Left"  Text="{Binding Lable, ElementName=MyCard}" FontSize="20" FontWeight="Bold" Style="{StaticResource TextBlockStyle}"/>
        </Border>
        <Border Background="Transparent" CornerRadius="20" BorderThickness="4" BorderBrush="Orange" Width="250" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="{Binding Value,ElementName=MyCard}" FontSize="20" FontWeight="Bold" Style="{StaticResource TextBlockStyle}"/>
        </Border>
        <Border Background="Transparent" CornerRadius="20"  BorderBrush="Orange" Width="250" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Click Me" Width="100" Height="30" HorizontalAlignment="Center" Command="{Binding ClickCommand, ElementName=MyCard}"/>
        </Border>
    </StackPanel>
</UserControl>
