<Window x:Class="DependencyProperties.WindowCounter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DependencyProperties"
        mc:Ignorable="d"
        Title="WindowCounter" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Button x:Name="CounterButton" Content="{Binding Counter, Mode=OneWay}" Width="200" Height="100" FontSize="24" >
            
        </Button>
    </Grid>
</Window>
