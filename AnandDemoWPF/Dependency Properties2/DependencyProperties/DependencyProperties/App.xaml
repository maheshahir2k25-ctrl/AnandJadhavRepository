<Application x:Class="DependencyProperties.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DependencyProperties"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="30,0,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
            <Style x:Key="MyUserControlStyle" TargetType="Border">
                <Setter Property="Background" Value="LightYellow"/>
                <Setter Property="BorderBrush" Value="Orange"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="10"/>
            </Style>
            <Style x:Key="MyUserControlTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="DarkOrange"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
    </Application.Resources>
</Application>
