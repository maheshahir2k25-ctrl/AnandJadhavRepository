<Window x:Class="WpfAppAnand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAnand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" >

    <Border BorderBrush="Black" BorderThickness="2">
        <Grid Background="Maroon" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <!--<Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Content="Button 1" Margin="10"/>-->
            <Border BorderBrush="Black" BorderThickness="2">
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="10" Orientation="Vertical">
                    <Button Content="Stack Panel" Margin="10"></Button>
                    <Button Content="Button 1" Margin="10"></Button>
                    <Button Content="Button 1" Margin="10"></Button>
                    <Button Content="Button 1" Margin="10"></Button>
                    <Button Content="Button 1" Margin="10"></Button>
                    <Button Content="Button 1" Margin="10"></Button>
                </StackPanel>
            </Border>
            
            <Canvas Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="Red" Height="400" Width="400">
                <Canvas Height="100" Width="100" Top="0" Left="0" Background="Red"/>
                <Canvas Height="100" Width="100" Top="100" Left="100" Background="Green"/>
                <Canvas Height="100" Width="100" Top="50" Left="50" Background="Blue"/>
                <Canvas Height="100" Width="100" Top="160" Left="160" 
                    Background="White"/>
                <Label Content="This is Canvas
                   " Canvas.Left="9" Canvas.Top="16"/>
            </Canvas>
            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <DockPanel Grid.Row="0" Grid.Column="2" Background="Yellow">
                    <Button Name="TopRect" DockPanel.Dock="Top" Background="LightGreen" Height="50" Content="Dock Panel - Dock Top" />
                    <Button Name="LeftRect" DockPanel.Dock="Left" Background="LightBlue" Width="50" Content="Left" />
                    <Button Name="RightRect" DockPanel.Dock="Right" Background="LightSalmon" Width="50" Content="Right" />
                    <Button Name="BottomRect" DockPanel.Dock="Bottom" Background="LightCyan" Height="50" />
                    <Button Name="Fill" Background="LightGray" />
                </DockPanel>
                <WrapPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
                    <Ellipse Width="100" Height="100" Fill="Red" />
                    <Separator Width="10" />
                    <Button Background="Orange" Width="180" Height="50"  
            FontFamily="Georgia" FontSize="18"   
            FontWeight="Bold" Name="ClickMeButton" >Wrap Panel</Button>
                </WrapPanel>

            </Grid>




        </Grid>
    </Border>
</Window>
