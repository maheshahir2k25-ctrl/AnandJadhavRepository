<UserControl x:Class="DependencyProperties.UserControls.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DependencyProperties.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="MyCard">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="5" Background="White">
        <StackPanel>
            <TextBlock Text="{Binding Label, ElementName=MyCard}" 
                       FontWeight="Bold" Foreground="Gray"/>

            <TextBlock Text="{Binding Value, ElementName=MyCard}" 
                       FontSize="20" FontWeight="Bold"/>
            <Button Content="Click Me" Command="{Binding UserControlButtonClick, ElementName=MyCard}"></Button>
        </StackPanel>
    </Border>
</UserControl>
